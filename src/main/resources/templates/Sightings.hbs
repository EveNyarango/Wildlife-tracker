{{#partial "content"}}
    <body>

    <div>
        <h1>Sightings </h1>
    </div>
    <div class="col-md-6">
        {{#each Sightings}}
            <div class="card"  style="background-image: url('images/'); background-size:cover; background-repeat:no-repeat;">
                <h3>Name of the sighted Animal: {{aniName}}</h3>
                <hr>
                <p>Location of the sighted Animal: {{location}}</p>
                <hr>
                <p>Ranger Name: {{rangerName}}</p>
                <hr>
            </div>
        {{/each}}
    </div>

    <br>
    <a class="btn btn-info" href="/sightingsForm">Add another Sighting</a>
    </body>
{{/partial}}

{{> layout.hbs}}